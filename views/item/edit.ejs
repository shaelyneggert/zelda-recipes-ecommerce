<%- include('../partials/header.ejs')%>
<link rel="stylesheet" type="text/css" href="/css/new.css">


<div class="background-2">
<div class = "container">
    <form method = "POST" action = "/items/<%= item.id%>?_method=PUT" enctype="multipart/form-data">
        
        <label for="condition">Condition:</label>
        <select id="condition" name="condition" value="<%= item.condition%>">
            <option value="New">New</option>
            <option value="Used Like New">Used Like New</option>
            <option value="Good">Used - Good</option>
            <option value="Acceptable">Used - Acceptable</option>
            <option value="Old">Old</option>

        </select>
        <br>
        
        <label for="title" >Title</label>
        <input type="text" id="title" name="title" value = "<%= item.title%>" required>
        
        <br> 
        
        <label for="price">Price ($):</label>
        <input type="number" id="price" name="price" step="0.01" value="<%= item.price%>" required>


        <label for="details">Details</label>
        <textarea rows="5" id="details" name="details" class = "fixed-width" required><%= item.details%></textarea>

        <br>
        <label for="image">Image:</label>
        <input type="file" id="image" name="image" accept="image/*">

        <br>
        <button type="submit">Submit</button>

    </form>
    </div>
    </div>
<%- include('../partials/footer.ejs')%>
